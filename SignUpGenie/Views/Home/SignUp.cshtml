@model Tour

<div class="ml-5">
    <h1>Available Tours</h1>
    @foreach (var t in Tour)
    {
        <div class="card card-outline-dark m-3 p-1">
            <h4>@t.DateTime</h4>
            <form id="@t.TourId" method="post">
                <input type="hidden" asp-for="TourId"/>
                <span class="card-text p-1">
                    <button type="submit" class="btn-success btn-sm pull-right" style="float:right">Select Tour</button>
                </span>
            </form>
        </div>
    }
</div>
